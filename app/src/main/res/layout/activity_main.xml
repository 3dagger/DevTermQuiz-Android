        <TextView
            android:id="@+id/txt_question_count"
            android:onClick="@{() -> activity.onLoadNowDate()}"
            android:textColor="#000000"
            android:background="@color/list_item_bg_collapsed"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textStyle="bold"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/btn_next"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="@string/str_next"
            android:onClick="@{() -> activity.onRepeatRequestSingleQuizData()}"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/txt_question_count"
            android:background="@color/list_item_bg_collapsed"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:text="@{vm.searchSingleQuizData.question}" />

