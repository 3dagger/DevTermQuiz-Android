<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.main.MainActivity">

    <data>
        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.dagger.devtermquiz.view.main.MainActivity" />

        <variable
            name="vm"
            type="com.dagger.devtermquiz.view.main.model.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_today_quota"
            android:text="오늘의 할당량"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_question_count"
            android:layout_below="@id/txt_today_quota"
            android:onClick="@{() -> activity.onLoadNowDate()}"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40dp"
            />

        <Button
            android:id="@+id/btn_next"
            android:visibility="gone"
            android:textStyle="bold"
            android:text="@string/str_next"
            android:onClick="@{() -> activity.onRepeatRequestSingleQuizData()}"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<!--        <Button-->
<!--            android:id="@+id/btn_sample"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Sample"-->
<!--            android:textColor="#FFFFFF"-->
<!--            android:background="#000000"/>-->



        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_question_count"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:text="@{vm.searchSingleQuizData.question}" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_question"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_showSpinner="false"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_first_view"
                    app:expandable_secondLayout="@layout/commentary_first_view"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expandable1"
                    android:layout_marginTop="15dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_second_view"
                    app:expandable_secondLayout="@layout/commentary_second_view"
                    app:expandable_showSpinner="false"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expandable2"
                    android:layout_marginTop="15dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_third_view"
                    app:expandable_secondLayout="@layout/commentary_third_view"
                    app:expandable_showSpinner="false"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expandable3"
                    android:layout_marginTop="15dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_fourth_view"
                    app:expandable_secondLayout="@layout/commentary_fourth_view"
                    app:expandable_showSpinner="false"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <uk.co.markormesher.android_fab.FloatingActionButton
            android:id="@+id/fab"
            app:fabSize="mini"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:buttonBackgroundColour="@color/itemPrimary"
            app:buttonPosition="bottom|end"
            />

    </RelativeLayout>
</layout>