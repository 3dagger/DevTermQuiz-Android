<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.main.MainActivity">

    <data>
        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.dagger.devtermquiz.view.main.MainActivity" />

        <variable
            name="vm"
            type="com.dagger.devtermquiz.view.main.model.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <FrameLayout
                android:id="@+id/appbar_container"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <ImageView
                    android:id="@+id/drawer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:onClick="@{() -> activity.onRepeatRequestSingleQuizData()}"
                    android:padding="16dp"
                    app:srcCompat="@drawable/ic_drawer_icon"
                    app:tint="@color/toolbar_title_color" />

                <View
                    android:id="@+id/toolbar_title"
                    android:layout_width="140dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_pill"
                    android:backgroundTint="@color/toolbar_title_color"
                    android:onClick="@{() -> activity.onRepeatRequestSingleQuizData()}" />
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/txt_question_count"
            android:onClick="@{() -> activity.onLoadNowDate()}"
            android:textColor="#000000"
            android:background="@color/list_item_bg_collapsed"
            android:gravity="center"
            android:layout_below="@id/appbar"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:text="1 / 10"
            />

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/txt_question_count"
            android:background="@color/list_item_bg_collapsed"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:text="@{vm.singleQuizData.results.get(0).question}" />

        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/recyclerView"-->
        <!--            android:layout_below="@id/txt_question"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:orientation="vertical">-->

        <!--        </androidx.recyclerview.widget.RecyclerView>-->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_question"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_first_view"
                    app:expandable_secondLayout="@layout/commentary_first_view"
                    app:expandable_showSpinner="false"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expandable"
                    android:layout_marginTop="30dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_second_view"
                    app:expandable_secondLayout="@layout/commentary_second_view"
                    app:expandable_showSpinner="false"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

                <com.skydoves.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/expandable2"
                    android:layout_marginTop="30dp"
                    app:expandable_animation="bounce"
                    app:expandable_duration="300"
                    app:expandable_isExpanded="false"
                    app:expandable_parentLayout="@layout/example_second_view"
                    app:expandable_secondLayout="@layout/commentary_second_view"
                    app:expandable_showSpinner="false"
                    app:expandable_spinner_gravity="end"
                    app:expandable_spinner_margin="30dp" />

            </RelativeLayout>
            <!--        <androidx.recyclerview.widget.RecyclerView-->
            <!--            android:id="@+id/recycler_view"-->
            <!--            android:layout_below="@id/txt_question"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:clipToPadding="false"-->
            <!--            android:paddingTop="20dp"-->
            <!--            app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
            <!--            tools:listitem="@layout/item_view" />-->

        </androidx.core.widget.NestedScrollView>

        <!--        <androidx.viewpager2.widget.ViewPager2-->
        <!--            android:id="@+id/viewPager"-->
        <!--            android:layout_below="@+id/txt_question"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"/>-->

    </RelativeLayout>


</layout>