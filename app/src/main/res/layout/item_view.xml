<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/firstCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/list_item_bg_collapsed"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <FrameLayout
                android:id="@+id/firstCardContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/firstScaleContainer"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/list_item_horizontal_padding"
                    android:paddingTop="@dimen/list_item_vertical_padding"
                    android:paddingRight="@dimen/list_item_horizontal_padding"
                    android:paddingBottom="@dimen/list_item_vertical_padding"
                    android:transformPivotX="0dp">

                    <ImageView
                        android:id="@+id/firstChevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_chevron_right"
                        app:tint="@color/title_color" />

                    <TextView
                        android:id="@+id/firstExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/firstChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/title_color" />

                    <View
                        android:id="@+id/firstSubtitle"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/firstExample"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/firstChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/subtitle_color" />
                </RelativeLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/secondCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstCardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/list_item_bg_collapsed"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <FrameLayout
                android:id="@+id/secondCardContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/secondScaleContainer"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/list_item_horizontal_padding"
                    android:paddingTop="@dimen/list_item_vertical_padding"
                    android:paddingRight="@dimen/list_item_horizontal_padding"
                    android:paddingBottom="@dimen/list_item_vertical_padding"
                    android:transformPivotX="0dp">

                    <ImageView
                        android:id="@+id/secondChevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_chevron_right"
                        app:tint="@color/title_color" />

                    <TextView
                        android:id="@+id/secondExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/secondChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/title_color" />

                    <View
                        android:id="@+id/secondSubtitle"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/secondExample"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/secondChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/subtitle_color" />

                </RelativeLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/thirdCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondCardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/list_item_bg_collapsed"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <FrameLayout
                android:id="@+id/thirdCardContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/thirdScaleContainer"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/list_item_horizontal_padding"
                    android:paddingTop="@dimen/list_item_vertical_padding"
                    android:paddingRight="@dimen/list_item_horizontal_padding"
                    android:paddingBottom="@dimen/list_item_vertical_padding"
                    android:transformPivotX="0dp">

                    <ImageView
                        android:id="@+id/thirdChevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_chevron_right"
                        app:tint="@color/title_color" />

                    <TextView
                        android:id="@+id/thirdExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/thirdChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/title_color" />

                    <View
                        android:id="@+id/subtitle1"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/thirdExample"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/thirdChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/subtitle_color" />

                </RelativeLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fourthCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thirdCardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/list_item_bg_collapsed"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <FrameLayout
                android:id="@+id/fourthCardContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/fourthScaleContainer"
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/list_item_horizontal_padding"
                    android:paddingTop="@dimen/list_item_vertical_padding"
                    android:paddingRight="@dimen/list_item_horizontal_padding"
                    android:paddingBottom="@dimen/list_item_vertical_padding"
                    android:transformPivotX="0dp">

                    <ImageView
                        android:id="@+id/fourthChevron"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:srcCompat="@drawable/ic_chevron_right"
                        app:tint="@color/title_color" />

                    <TextView
                        android:id="@+id/fourthExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/fourthChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/title_color" />

                    <View
                        android:id="@+id/fourthSubtitle"
                        android:layout_width="100dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/fourthExample"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/fourthChevron"
                        android:background="@drawable/ic_pill"
                        android:backgroundTint="@color/subtitle_color" />
                </RelativeLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>